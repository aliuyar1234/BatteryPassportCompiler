# BPC Environment Configuration
# Copy to .env and adjust values for your environment

# Application Environment
BPC_ENV=dev

# HTTP Server
BPC_HTTP_HOST=0.0.0.0
BPC_HTTP_PORT=8080

# Compiler
BPC_COMPILER_BUILD_ID=UNKNOWN

# Worker
BPC_WORKER_ID=worker-1

# Database (PostgreSQL)
BPC_DB_HOST=localhost
BPC_DB_PORT=5432
BPC_DB_USER=bpc
BPC_DB_PASSWORD=bpc
BPC_DB_NAME=bpc
BPC_DB_POOL_SIZE=10
BPC_DB_SSLMODE=disable

# Queue (RabbitMQ)
BPC_QUEUE_ENABLED=false
BPC_QUEUE_URL=amqp://guest:guest@localhost:5672/
BPC_QUEUE_EXCHANGE=bpc
BPC_QUEUE_ROUTING_KEY=jobs.trigger

# Jobs Configuration
BPC_JOBS_POLL_INTERVAL_MS=1000
BPC_JOBS_LEASE_SECONDS=60
BPC_JOBS_LEASE_RENEW_SECONDS=30
BPC_JOBS_MAX_ATTEMPTS_DEFAULT=10

# Size Limits
BPC_PROOF_MAX_BYTES=20000000
BPC_PAYLOAD_MAX_BYTES=5000000
BPC_RECEIPT_MAX_BYTES=500000

# Signing (REQUIRED in prod)
BPC_SIGNING_ED25519_PRIVATE_KEY_BASE64=
BPC_SIGNING_KEY_ID=dev-key-1

# API Security (REQUIRED in prod)
BPC_API_KEY_PEPPER_BASE64=

# Rate Limiting
BPC_RATE_LIMIT_ENABLED=false
BPC_RATE_LIMIT_RPS=50
BPC_RATE_LIMIT_BURST=100

# Data Retention
BPC_RETENTION_EVENTS_DAYS=5475
BPC_RETENTION_PASSPORT_VERSIONS_DAYS=5475
BPC_RETENTION_DOCUMENT_VERSIONS_DAYS=3650

# Logging
BPC_LOG_LEVEL=info
BPC_LOG_JSON=true

# Metrics
BPC_METRICS_ENABLED=true
BPC_HEALTH_REQUIRE_QUEUE=false
